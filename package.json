{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples"
    ]
  },
  "devDependencies": {
    "chalk": "^2.4.2",
    "docusaurus-init": "^1.0.2",
    "execa": "^1.0.0",
    "parcel-bundler": "^1.12.3",
    "typedoc": "^0.14.2"
  },
  "scripts": {
    "clean": "rm -rf ./packages/*/build ./packages/*/build-es5 ./packages/*/tsconfig.tsbuildinfo",
    "build": "tsc -b ./packages/stepcode/tsconfig.json",
    "build:core": "tsc -b ./packages/stepcode-core/tsconfig.json",
    "watch": "yarn build --watch",
    "demo": "yarn parcel ./demo/src/index.html",
    "doc": "node ./scripts/docgen.js",
    "demo:start": "parcel ./examples/src/index.html --out-dir=./examples/dist",
    "demo:build": "parcel build ./examples/src/index.html --out-dir=./examples/build",
    "sass:build": "parcel build ./packages/stepcode/styles/style.scss --out-dir=./packages/stepcode/css"
  }
}
